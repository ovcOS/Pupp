<div id="sign_up">
  <div class="banner" style="background-image: linear-gradient(180deg, rgba(255,255,255,0) 0, rgba(255,255,255,0.8) 100%), url('https://images.unsplash.com/photo-1519705733052-abc8faae00f6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=521fb44ff67ece7efe8f268d3d2d7e29&auto=format&fit=crop&w=1651&q=80');">

    <div class= "form__sign-up-message">
      <div class="form__sign-up-message-inner">
        <h2><strong>Sign up</strong> and chill with some puppies</h2>
      </div>
    </div>

    <div class="form">
      <div class="form__title">
        <div class="form__text">Join PUPP</div>
      </div>

      <%= minimal_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form__content">

          <%= f.input :name,
          required: true,
          autofocus: true,
          placeholder: "Name" %>

          <%= f.input :email,
          required: true,
          autofocus: true ,
          input_html: { autocomplete: "email" },
          placeholder: "email"%>

          <%= f.input :password,
          required: true,
          # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
          input_html: { autocomplete: "new-password" },
          placeholder: "password" %>

          <%= f.input :password_confirmation,
          required: true,
          input_html: { autocomplete: "new-password" },
          placeholder: "confirm password" %>

        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class:'form__submit form__text'%>
      </div>
      <% end %>

      <div class="form__links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
